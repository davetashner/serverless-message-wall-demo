# Lambda Function URL for api-handler
# Exposes the api-handler Lambda to the browser
# See ISSUE-4.1 for requirements
---
apiVersion: lambda.aws.upbound.io/v1beta1
kind: FunctionURL
metadata:
  name: ${RESOURCE_PREFIX}-api-handler-url
spec:
  forProvider:
    region: ${AWS_REGION}
    functionNameRef:
      name: ${RESOURCE_PREFIX}-api-handler
    authorizationType: NONE
    cors:
      - allowCredentials: false
        allowHeaders:
          - "*"
        allowMethods:
          - "*"
        allowOrigins:
          - "*"
        maxAge: 3600
  providerConfigRef:
    name: default
